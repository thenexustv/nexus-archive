---
import { format } from "date-fns";
import type { Episode } from "../data/types";

interface Props {
  episode: Episode;
}

const { episode } = Astro.props;
const date = format(new Date(episode.createdAt), "MMM d, yyyy");
---

<article class="py-4">
  <a
    href={`/episodes/${episode.slug}/`}
    class="font-medium text-gray-900 dark:text-stone-100 hover:text-blue-600 dark:hover:text-blue-400"
  >
    {episode.formattedTitle}
  </a>
  <div class="mt-1 text-sm text-gray-500 dark:text-stone-400 flex items-center gap-3">
    <time datetime={episode.createdAt}>{date}</time>
    {episode.media && (
      <span class="text-gray-400 dark:text-stone-500">{episode.media.length}</span>
    )}
  </div>
  {episode.description && (
    <p class="mt-1 text-sm text-gray-600 dark:text-stone-300 line-clamp-2">{episode.description}</p>
  )}
</article>
